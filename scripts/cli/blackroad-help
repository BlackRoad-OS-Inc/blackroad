#!/bin/bash
# BlackRoad CLI - Quick Reference

PINK='\033[38;5;205m'
BLUE='\033[38;5;69m'
GREEN='\033[38;5;82m'
AMBER='\033[38;5;214m'
RESET='\033[0m'

echo -e "${PINK}╔════════════════════════════════════════════════╗${RESET}"
echo -e "${PINK}║${RESET}           BlackRoad OS - CLI Tools            ${PINK}║${RESET}"
echo -e "${PINK}╚════════════════════════════════════════════════╝${RESET}"
echo ""
echo -e "${BLUE}Main Command:${RESET}"
echo "  blackroad                    # Main interface"
echo ""
echo -e "${BLUE}AI & Agents:${RESET}"
echo "  blackroad-ai suggest \"...\"   # Unlimited AI coding (local models)"
echo "  blackroad-agents             # List all agents"
echo "  blackroad-ask-all \"...\"      # Ask all agents"
echo ""
echo -e "${BLUE}Infrastructure:${RESET}"
echo "  blackroad-cluster            # Cluster management"
echo "  blackroad-deploy             # Deployment tools"
echo "  blackroad-dns                # DNS management"
echo "  blackroad-status             # System status"
echo ""
echo -e "${BLUE}Development:${RESET}"
echo "  blackroad-codex              # Search 22,244 components"
echo "  blackroad-test               # Run tests"
echo "  blackroad-run                # Execute scripts"
echo ""
echo -e "${BLUE}Monitoring:${RESET}"
echo "  blackroad-stats              # Live statistics"
echo "  blackroad-logs               # View logs"
echo "  blackroad-health             # Health checks"
echo ""
echo -e "${GREEN}Total Commands: $(ls -1 ~/bin/blackroad-* 2>/dev/null | wc -l | tr -d ' ')${RESET}"
echo ""
echo -e "${AMBER}Usage:${RESET} blackroad-<command> [args]"
echo -e "${AMBER}List all:${RESET} ls ~/bin/blackroad-*"
