# RoadPad - Terminal-native plain-text editor for BlackRoad OS
# Usage: roadpad [file]

ROADPAD_DIR="${ROADPAD_DIR:-$HOME/roadpad}"
ROADPAD_PY="$ROADPAD_DIR/roadpad.py"

if [[ ! -f "$ROADPAD_PY" ]]; then
    echo "Error: $ROADPAD_PY not found"
    exit 1
fi

cd "$ROADPAD_DIR" && exec python3 "$ROADPAD_PY" "$@"
