#!/usr/bin/env bash
set -euo pipefail

echo "---" >> ~/blackroad-context.txt
echo "## Snapshot: $(date)" >> ~/blackroad-context.txt
echo "pwd: $(pwd)" >> ~/blackroad-context.txt
echo "python: $(which python3)" >> ~/blackroad-context.txt
echo "lucidia: $(which lucidia)" >> ~/blackroad-context.txt
echo "br: $(command -v br || echo not-found)" >> ~/blackroad-context.txt
echo "---" >> ~/blackroad-context.txt
