# BLACKROAD OS - Terminal Interface Launcher
# Usage: bros [tui|curses|web]

CMD="${1:-curses}"
DIR="$HOME/blackroad-command-center"

case "$CMD" in
    tui|t)
        # Rich TUI with textual (requires: pip install textual)
        python3 "$DIR/blackroad-tui.py"
        ;;
    curses|c)
        # Pure curses (no dependencies)
        python3 "$DIR/blackroad-curses.py"
        ;;
    web|w)
        # Open web dashboard
        open "$DIR/blackroad-os-dashboard.html"
        ;;
    *)
        echo "BLACKROAD OS"
        echo ""
        echo "Usage: bros [mode]"
        echo ""
        echo "Modes:"
        echo "  curses, c   Pure curses TUI (default, no deps)"
        echo "  tui, t      Rich TUI with textual"
        echo "  web, w      Open web dashboard"
        echo ""
        ;;
esac
