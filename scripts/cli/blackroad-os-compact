#!/bin/bash
# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
# BlackRoad OS COMPACT - 6-Panel Optimized Layout
# Works on smaller terminals - no space issues!
# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

VERSION="2.0.0-COMPACT"
CONFIG_DIR="$HOME/.config/blackroad"

# Load colors
source "$CONFIG_DIR/colors.sh" 2>/dev/null || {
  ORANGE='\033[38;5;214m'
  BRIGHT_ORANGE='\033[38;5;202m'
  HOT_PINK='\033[38;5;199m'
  MAGENTA='\033[38;5;165m'
  PURPLE='\033[38;5;93m'
  BLUE='\033[38;5;33m'
  NAVY='\033[38;5;17m'
  R='\033[0m'
  B='\033[1m'
}

# Banner
show_banner() {
  clear
  echo -e "${B}"
  echo -e "${ORANGE}‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó${R}"
  echo -e "${BRIGHT_ORANGE}‚ïë ${B}\033[97m‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó ‚ñà‚ñà‚ïó      ‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó  ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó‚ñà‚ñà‚ïó  ‚ñà‚ñà‚ïó‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó  ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó${BRIGHT_ORANGE}     ‚ïë${R}"
  echo -e "${HOT_PINK}‚ïë ${B}\033[97m‚ñà‚ñà‚ïî‚ïê‚ïê‚ñà‚ñà‚ïó‚ñà‚ñà‚ïë     ‚ñà‚ñà‚ïî‚ïê‚ïê‚ñà‚ñà‚ïó‚ñà‚ñà‚ïî‚ïê‚ïê‚ïê‚ïê‚ïù‚ñà‚ñà‚ïë ‚ñà‚ñà‚ïî‚ïù‚ñà‚ñà‚ïî‚ïê‚ïê‚ñà‚ñà‚ïó‚ñà‚ñà‚ïî‚ïê‚ïê‚ïê‚ñà‚ñà‚ïó${HOT_PINK}    ‚ïë${R}"
  echo -e "${MAGENTA}‚ïë ${B}\033[97m‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïî‚ïù‚ñà‚ñà‚ïë     ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë     ‚ñà‚ñà‚ñà‚ñà‚ñà‚ïî‚ïù ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïî‚ïù‚ñà‚ñà‚ïë   ‚ñà‚ñà‚ïë${MAGENTA}    ‚ïë${R}"
  echo -e "${PURPLE}‚ïë ${B}\033[97m‚ñà‚ñà‚ïî‚ïê‚ïê‚ñà‚ñà‚ïó‚ñà‚ñà‚ïë     ‚ñà‚ñà‚ïî‚ïê‚ïê‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë     ‚ñà‚ñà‚ïî‚ïê‚ñà‚ñà‚ïó ‚ñà‚ñà‚ïî‚ïê‚ïê‚ñà‚ñà‚ïó‚ñà‚ñà‚ïë   ‚ñà‚ñà‚ïë${PURPLE}    ‚ïë${R}"
  echo -e "${BLUE}‚ïë ${B}\033[97m‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïî‚ïù‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó‚ñà‚ñà‚ïë  ‚ñà‚ñà‚ïë‚ïö‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó‚ñà‚ñà‚ïë  ‚ñà‚ñà‚ïó‚ñà‚ñà‚ïë  ‚ñà‚ñà‚ïë‚ïö‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïî‚ïù${BLUE}    ‚ïë${R}"
  echo -e "${NAVY}‚ïë ${B}\033[97m‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù‚ïö‚ïê‚ïù  ‚ïö‚ïê‚ïù ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù‚ïö‚ïê‚ïù  ‚ïö‚ïê‚ïù‚ïö‚ïê‚ïù  ‚ïö‚ïê‚ïù ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù${NAVY}     ‚ïë${R}"
  echo -e "${ORANGE}‚ï†‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ï£${R}"
  echo -e "${HOT_PINK}‚ïë          ${B}\033[97mC O M P A C T   M E S H   G R I D${HOT_PINK}                 ‚ïë${R}"
  echo -e "${MAGENTA}‚ïë                     ${B}\033[97mblackroad${MAGENTA} \033[2m\033[97m${VERSION}${MAGENTA}                      ‚ïë${R}"
  echo -e "${BLUE}‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù${R}"
  echo -e "${R}"
}

show_banner

echo -e "${ORANGE}üöÄ Launching Compact 6-Panel Grid...${R}\n"

# Kill existing session
tmux kill-session -t blackroad-compact 2>/dev/null || true

# Create session with conservative sizing
tmux new-session -d -s blackroad-compact -n "MESH"

# Configure tmux
tmux set-option -t blackroad-compact status-style "bg=colour17,fg=colour214"
tmux set-option -t blackroad-compact status-left "#[fg=colour17,bg=colour214,bold] üöó blackroad #[default]"
tmux set-option -t blackroad-compact status-right "#[fg=colour17,bg=colour33,bold] %H:%M:%S #[default]"
tmux set-option -t blackroad-compact status-interval 1
tmux set-option -t blackroad-compact mouse on

# Create 2x3 grid (easier to fit)
# Row 1: aria, lucidia, alice
tmux send-keys -t blackroad-compact "ssh aria" C-m
tmux split-window -h -t blackroad-compact
tmux send-keys -t blackroad-compact "ssh lucidia" C-m
tmux split-window -h -t blackroad-compact
tmux send-keys -t blackroad-compact "ssh alice" C-m

# Row 2: claude, operator, docker
tmux select-pane -t blackroad-compact.0
tmux split-window -v -t blackroad-compact
tmux send-keys -t blackroad-compact "clear && echo 'ü§ñ CLAUDE AI' && claude" C-m

tmux select-pane -t blackroad-compact.1
tmux split-window -v -t blackroad-compact
tmux send-keys -t blackroad-compact "clear && echo 'üíª OPERATOR' && exec zsh" C-m

tmux select-pane -t blackroad-compact.2
tmux split-window -v -t blackroad-compact
tmux send-keys -t blackroad-compact "clear && echo 'üê≥ DOCKER' && docker ps && exec zsh" C-m

# Even layout
tmux select-layout -t blackroad-compact tiled

echo -e "${BLUE}‚úì Compact Grid Launched!${R}\n"
echo -e "${ORANGE}Layout: 2 rows √ó 3 columns (fits any terminal size)${R}\n"
sleep 1

# Attach
tmux attach-session -t blackroad-compact
