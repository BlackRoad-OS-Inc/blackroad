# br-art — terminal art
ACTION="${1:-gradient}"

case "$ACTION" in
  gradient)
    printf '\033[38;5;208m████████████████████████████████████████\033[0m\n'
    printf '\033[38;5;202m████████████████████████████████████████\033[0m\n'
    printf '\033[38;5;198m████████████████████████████████████████\033[0m\n'
    printf '\033[38;5;163m████████████████████████████████████████\033[0m\n'
    printf '\033[38;5;33m████████████████████████████████████████\033[0m\n'
    ;;
  logo)
    printf '\033[38;5;208m██████╗ \033[38;5;202m██████╗ \033[0m\n'
    printf '\033[38;5;208m██╔══██╗\033[38;5;202m██╔══██╗\033[0m\n'
    printf '\033[38;5;198m██████╔╝\033[38;5;198m██████╔╝\033[0m\n'
    printf '\033[38;5;163m██╔══██╗\033[38;5;163m██╔══██╗\033[0m\n'
    printf '\033[38;5;33m██████╔╝\033[38;5;33m██║  ██║\033[0m\n'
    printf '\033[38;5;33m╚═════╝ \033[38;5;33m╚═╝  ╚═╝\033[0m\n'
    ;;
  box)
    TEXT="${2:-BLACKROAD}"
    W=$((${#TEXT} + 4))
    printf '\033[38;5;208m╔'; printf '═%.0s' $(seq 1 $W); printf '╗\033[0m\n'
    printf '\033[38;5;198m║\033[0m  \033[38;5;255m%s\033[0m  \033[38;5;198m║\033[0m\n' "$TEXT"
    printf '\033[38;5;33m╚'; printf '═%.0s' $(seq 1 $W); printf '╝\033[0m\n'
    ;;
  *)
    echo "Usage: br-art [gradient|logo|box <text>]"
    ;;
esac
